# ═══════════════════════════════════════════════════════════════
# LeviBot Enterprise AI Signals Platform - Environment Configuration
# ═══════════════════════════════════════════════════════════════

# ENVIRONMENT
ENV=paper
TZ=Europe/Istanbul
LOG_LEVEL=INFO

# REDIS (Event Bus & Hot Cache)
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# CLICKHOUSE (Time-Series Database)
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=levibot

# PANEL API (FastAPI Backend)
PANEL_HOST=0.0.0.0
PANEL_PORT=8080
API_AUTH_SECRET=change_me_to_secure_hmac_key_min_32_chars
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,https://t.me

# TELEGRAM
TG_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghi
TG_ADMIN_CHAT_ID=123456789
TG_WEBHOOK_URL=
TG_WEBHOOK_SECRET=

# EXCHANGE (MEXC)
EXCHANGE=mexc
MARKET_TYPE=spot
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET=your_mexc_secret_here
MEXC_TESTNET=false

# MINIAPP (Telegram WebApp)
MINIAPP_PUBLIC_URL=http://localhost:8080
VITE_API_BASE=http://localhost:8080

# ML MODEL
MODEL_REGISTRY_PATH=/app/backend/data/models
MODEL_STAGE=production
FEATURE_STORE_TTL=300

# POLICY ENGINE
PER_TRADE_RISK=0.003
DAILY_DD_STOP=0.03
COOLDOWN_MINUTES=10
MIN_CONFIDENCE=0.55
MAX_DAILY_TRADES=50

# PROMETHEUS/GRAFANA
PROM_PORT_PANEL=8080
PROM_PORT_SIGNAL=9100
PROM_PORT_EXEC=9101
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# SYMBOLS (Trading Universe)
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,ADAUSDT

# FEATURE BUILDER
FEATURE_WINDOW_MINUTES=60
FEATURE_UPDATE_INTERVAL=30

# CIRCUIT BREAKER
CB_FAILURE_THRESHOLD=5
CB_RECOVERY_TIMEOUT=60
CB_EXPECTED_EXCEPTION=Exception

# AUDIT LOG
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# DOCKER COMPOSE
COMPOSE_PROJECT_NAME=levibot

