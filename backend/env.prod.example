# LeviBot Production Environment Variables
# Copy to .env.prod and fill in real values
# chmod 600 .env.prod

# =============================================================================
# CORE SETTINGS
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# API KEYS (NEVER COMMIT REAL VALUES)
# =============================================================================
# MEXC API (trading)
MEXC_API_KEY=YOUR_MEXC_API_KEY_HERE
MEXC_API_SECRET=YOUR_MEXC_API_SECRET_HERE
MEXC_USE_WS=true
MEXC_RATE_LIMIT=true

# OpenAI (sentiment analysis)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Telegram (notifications & mini-app)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=YOUR_JWT_SECRET_HERE_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Admin API key (temporary until JWT/RBAC)
ADMIN_API_KEY=YOUR_ADMIN_KEY_HERE_CHANGE_ME

# =============================================================================
# DATABASE & STORAGE
# =============================================================================
ANALYTICS_DB=/app/data/analytics.duckdb
POSTGRES_URL=postgresql://user:pass@localhost:5432/levibot
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI/ML
# =============================================================================
MODEL_DIR=/app/data/models
LGBM_MODEL_PATH=/app/data/models/best_lgbm.pkl
TFT_MODEL_PATH=/app/data/models/best_tft.pt

# Prediction cache (seconds, 0=disabled)
PREDICTION_CACHE_TTL=0

# Ensemble weights
ENSEMBLE_W_LGBM=0.5
ENSEMBLE_W_TFT=0.3
ENSEMBLE_W_SENT=0.2
ENSEMBLE_THRESHOLD=0.55

# =============================================================================
# TRADING ENGINE
# =============================================================================
# Risk limits
MAX_POSITION_PCT=20.0
MAX_DRAWDOWN_PCT=5.0
EQUITY_BASE=10000.0

# Symbols to trade (comma-separated)
SYMBOLS_TO_TRADE=BTC/USDT,ETH/USDT,SOL/USDT

# Engine settings
ENGINE_CYCLE_INTERVAL=1.0
ENGINE_MD_QUEUE_MAX=256

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_ENABLED=true
METRICS_PORT=8000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# S3 (backups)
AWS_ACCESS_KEY_ID=YOUR_AWS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_HERE
S3_BACKUP_BUCKET=levibot-backups

# Stripe (payments, if applicable)
STRIPE_API_KEY=YOUR_STRIPE_KEY_HERE
STRIPE_WEBHOOK_SECRET=YOUR_STRIPE_WEBHOOK_SECRET_HERE

# =============================================================================
# FEATURE FLAGS
# =============================================================================
KILL_SWITCH=false
PAPER_TRADING_MODE=true
LIVE_TRADING_ENABLED=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# CORS (adjust for your frontend domain)
# =============================================================================
CORS_ORIGINS=https://your.domain.com,https://www.your.domain.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_FORMAT=json
LOG_FILE=/app/data/logs/api.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# MISC
# =============================================================================
TIMEZONE=UTC
MAINTENANCE_MODE=false

