# ============================================
# LEVIBOT Realtime Configuration
# Copy this to .env.docker for Docker deployment
# ============================================

# --- Core Settings ---
ENV=production
PAPER=true
EXCHANGE=MEXC

# --- Database Connections ---
REDIS_URL=redis://redis:6379/0
PG_DSN=postgresql://postgres:postgres@timescaledb:5432/levibot

# --- AI & Integrations ---
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_ALERT_CHAT_ID=YOUR_CHAT_ID_HERE
TELETHON_API_ID=12345678
TELETHON_API_HASH=your_telethon_api_hash_here
TELETHON_SESSION=levibot.session

# --- Trading Symbols ---
# Comma-separated list of symbols to track
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,ADAUSDT

# --- Risk Management ---
SLIPPAGE_BPS=2.0
FEE_TAKER_BPS=5.0
FEE_MAKER_BPS=2.0
MAX_DAILY_LOSS=-200.0
MAX_POS_NOTIONAL=2000.0

# --- WebSocket Settings ---
WS_RECONNECT_SECS=3
WS_PING_INTERVAL=20

# --- Redis Streams ---
STREAM_TOPIC_TICKS=ticks
STREAM_TOPIC_SIGNALS=signals
STREAM_TOPIC_EVENTS=events
STREAM_MAXLEN=10000

# --- TimescaleDB Settings ---
DB_BATCH_SIZE=500
DB_FLUSH_INTERVAL_SEC=0.25

# --- Security ---
SECURITY_ENABLED=false
API_KEYS=your_secret_api_key_here
SECURED_PATH_PREFIXES=/signals,/exec,/paper,/trade
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX=120
RATE_LIMIT_BURST=40

# --- Logging ---
LOG_LEVEL=info
LOG_DIR=
DATA_DIR=backend/data

# --- MEXC API (Optional, for REST fallback) ---
MEXC_API_KEY=
MEXC_API_SECRET=
MEXC_SANDBOX=false

# --- Build Info (Auto-populated in CI/CD) ---
BUILD_VERSION=1.6.0-realtime
BUILD_SHA=local
BUILD_BRANCH=feat/realtime-levibot

# --- Auto-routing (Signal â†’ Execution) ---
AUTO_ROUTE_ENABLED=false
AUTO_ROUTE_DRY_RUN=true
AUTO_ROUTE_MIN_CONF=0.75
AUTO_ROUTE_DEFAULT_NOTIONAL=50
AUTO_ROUTE_EXCH=binance

# --- Alerts ---
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=







