ENV=prod
TZ=Europe/Istanbul

# API security
API_KEYS=changeme-prod-key-1,changeme-prod-key-2
SECURED_PATH_PREFIXES=/signals,/exec,/paper,/risk,/dex,/mev,/nft,/l2,/ml
RATE_LIMIT_BY=ip
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX=120
RATE_LIMIT_BURST=40

# Redis RL (distributed)
REDIS_URL=redis://redis:6379/0
RL_WINDOW_SEC=60
RL_MAX=120
RL_BURST=40

# Auto-route (demo defaults)
AUTO_ROUTE_ENABLED=true
AUTO_ROUTE_DRY_RUN=true
AUTO_ROUTE_MIN_CONF=0.75
AUTO_ROUTE_DEFAULT_NOTIONAL=25
AUTO_ROUTE_EXCH=binance
AUTO_ROUTE_SYMBOL_MAP=BTC:BTC/USDT,ETH:ETH/USDT,SOL:SOL/USDT

# Risk policy
RISK_POLICY=moderate
RISK_ATR_LOOKBACK=14
RISK_R_MULT=1.0
RISK_MAX_NOTIONAL=250
RISK_MIN_NOTIONAL=5

# DEX/NFT/L2 (optional API keys)
ZEROX_API_KEY=
ZEROX_API_URL=https://api.0x.org/swap/v1/quote
RESERVOIR_API_KEY=
RESERVOIR_API_URL=https://api.reservoir.tools
DEX_DEFAULT_CHAIN=ethereum

# Telethon (optional - for live telegram ingest)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_SESSION=
TELEGRAM_CHANNELS=@cryptosignals,@tradingalpha
TELEGRAM_MIN_TEXT_LEN=12
TELEGRAM_CHANNEL_TRUST=@cryptosignals:1.15,@tradingalpha:1.05
TRUST_MIN=0.5
TRUST_MAX=1.5

# CORS
CORS_ORIGINS=http://localhost,http://127.0.0.1

# --- S3 Archiver ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
S3_LOG_BUCKET=your-bucket-name
S3_LOG_PREFIX=levibot/logs
ARCHIVE_KEEP_DAYS=7
ARCHIVE_DRY_RUN=false
# (opsiyonel) MinIO/S3-compatible:
# AWS_ENDPOINT_URL=http://minio.local:9000

# --- Build Info (Docker) ---
BUILD_VERSION=1.2.0
BUILD_SHA=
BUILD_BRANCH=main
