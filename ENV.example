ENV=dev
HOST=127.0.0.1
PORT=8000

# Telegram (opsiyonel)
TELEGRAM_BOT_TOKEN=changeme
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=changeme

# CEX (opsiyonel)
BYBIT_API_KEY=
BYBIT_API_SECRET=
BINANCE_API_KEY=
BINANCE_API_SECRET=
LEVI_ONUR_BYBIT_KEY=
LEVI_ONUR_BYBIT_SECRET=
LEVI_ONUR_BINANCE_KEY=
LEVI_ONUR_BINANCE_SECRET=

# RPC (opsiyonel)
INFURA_KEY=
ETH_WS=wss://mainnet.infura.io/ws/v3/${INFURA_KEY}
ETH_HTTP=https://mainnet.infura.io/v3/${INFURA_KEY}

# NFT (opsiyonel)
RESERVOIR_API_KEY=

# S3 (opsiyonel)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
S3_LOG_BUCKET=

# CORS
CORS_ORIGINS=http://localhost:5173

# --- Auto-route guards ---
AUTO_ROUTE_ENABLED=false
AUTO_ROUTE_DRY_RUN=true
AUTO_ROUTE_MIN_CONF=0.75
AUTO_ROUTE_EXCH=binance
AUTO_ROUTE_DEFAULT_NOTIONAL=25
# CSV: RAW_SYMBOL->CEX_SYMBOL (boşluk yok)
AUTO_ROUTE_SYMBOL_MAP=BTC:BTC/USDT,ETH:ETH/USDT,SOL:SOL/USDT

# --- Telegram Live ---
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_SESSION=backend/data/telegram.session
TELEGRAM_CHANNELS=@alpha,@beta
TELEGRAM_MIN_TEXT_LEN=12
API_BASE=http://127.0.0.1:8000

# --- Live TG++ Controls ---
TG_BACKOFF_BASE=2
TG_BACKOFF_MAX_SEC=60
TG_BACKOFF_JITTER=0.3
TG_FETCH_TIMEOUT_SEC=15

# Channel trust (multiplier)
TELEGRAM_CHANNEL_TRUST=@cryptosignals:1.15,@tradingalpha:1.05,@random:0.75
TRUST_MIN=0.5
TRUST_MAX=1.5

# --- Security ---
API_KEYS=demo-key-1,demo-key-2         # Header: X-API-Key (boşsa auth kapalı)
RATE_LIMIT_BY=ip                        # ip | key
RATE_LIMIT_WINDOW_SEC=60                # sliding window
RATE_LIMIT_MAX=120                      # window başına istek
RATE_LIMIT_BURST=40                     # kısa süreli burst toleransı
# Korunan prefixler (CSV)
SECURED_PATH_PREFIXES=/signals,/exec,/paper

# --- Rate Limit (Distributed - Redis) ---
# Redis URL (boş = in-memory fallback)
REDIS_URL=redis://localhost:6379/0
RL_WINDOW_SEC=60
RL_MAX=120
RL_BURST=40

# --- Risk Policy ---
RISK_POLICY=moderate             # conservative | moderate | aggressive
RISK_ATR_LOOKBACK=14             # sentetik ATR için varsayılan pencere
RISK_R_MULT=1.0                  # ATR çarpanı (policy ile override edilir)
RISK_MAX_NOTIONAL=250            # route başına üst limit (usd)
RISK_MIN_NOTIONAL=5              # alt limit (usd)

# --- MEV / DEX ---
ZEROX_API_URL=https://api.0x.org/swap/v1/quote
ZEROX_API_KEY=
DEX_DEFAULT_CHAIN=ethereum    # ethereum | polygon | arbitrum

# --- NFT / Reservoir ---
RESERVOIR_API_URL=https://api.reservoir.tools
RESERVOIR_API_KEY=



